{
  "name": "@fal-works/p5-inst",
  "description": "Tiny utility for p5.js instance mode.",
  "version": "0.1.0",
  "license": "CC0-1.0",
  "author": "FAL",
  "keywords": [
    "p5js"
  ],
  "files": [
    "lib",
    "src",
    "types"
  ],
  "main": "lib/p5-inst.js",
  "module": "lib/p5-inst-esm.js",
  "types": "types/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@types/p5": "^0.9.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "esbuild": "^0.8.39",
    "eslint": "7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-total-functions": "^4.7.2",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-sofort": "^0.4.1",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "build": "npm run build:lib & npm run build:types",
    "build:lib": "ts-sofort scripts/build.ts",
    "prebuild:types": "rimraf types",
    "build:types": "tsc --build src/tsconfig.json",
    "postbuild:types": "prettier --write types/**/*.d.ts",
    "lint": "eslint src/"
  }
}
